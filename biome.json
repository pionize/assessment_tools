{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*.{ts,tsx,js,jsx}"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useImportType": "error",
				"useConst": "error",
				"useDefaultParameterLast": "error"
			},
			"suspicious": {
				"noDebugger": "error",
				"noConsole": "off",
				"noGlobalIsNan": "error"
			},
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useSemanticElements": "warn",
				"useButtonType": "error",
				"noAutofocus": "error",
				"useKeyWithClickEvents": "warn",
				"noStaticElementInteractions": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	}
}